<resources>
    <!-- Base -->
    <style name="PreferenceFixTheme" parent="@style/Theme.AppCompat">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material.Fix</item>
        <item name="preferenceDialog_messageAppearance">@style/PreferenceFixTheme.TextAppearanceDialogMessage
        </item>
    </style>

    <style name="PreferenceFixTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Light -->
    <style name="PreferenceFixTheme.Light" parent="@style/Theme.AppCompat.Light">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material.Fix</item>
        <item name="preferenceDialog_messageAppearance">@style/PreferenceFixTheme.TextAppearanceDialogMessage
        </item>
    </style>

    <style name="PreferenceFixTheme.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PreferenceFixTheme.Light.DarkActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material.Fix</item>
        <item name="preferenceDialog_messageAppearance">@style/PreferenceFixTheme.TextAppearanceDialogMessage
        </item>
    </style>

    <!-- DayNight -->
    <style name="PreferenceFixTheme.DayNight" parent="@style/Theme.AppCompat.DayNight">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material.Fix</item>
        <item name="preferenceDialog_messageAppearance">@style/PreferenceFixTheme.TextAppearanceDialogMessage
        </item>
    </style>

    <style name="PreferenceFixTheme.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PreferenceFixTheme.DayNight.DarkActionBar" parent="@style/Theme.AppCompat.DayNight.DarkActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material.Fix</item>
        <item name="preferenceDialog_messageAppearance">@style/PreferenceFixTheme.TextAppearanceDialogMessage
        </item>
    </style>
</resources>
